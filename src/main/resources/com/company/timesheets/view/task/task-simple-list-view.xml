<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://taskSimpleListView.title"
      focusComponent="tasksDataGrid">
    <data>
        <collection id="tasksDc"
                    class="com.company.timesheets.entity.Task">
            <fetchPlan extends="_base">
                <property name="type" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="tasksDl" readOnly="true">
                <query>
                    <![CDATA[select e from ts_Task e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <propertyFilter component="filter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
        <settings auto="true"/>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout alignItems="STRETCH"
            padding="false" spacing="false"
            expand="contentBox">
        <vbox id="contentBox" classNames="overflow-auto">
            <propertyFilter id="filter"
                            dataLoader="tasksDl" property="name"
                            operation="CONTAINS"
                            labelVisible="false"
                            width="100%" maxWidth="30em">
                <textField id="filterField"
                           placeholder="Start typing..."
                           clearButtonVisible="true">
                    <prefix>
                        <icon icon="SEARCH"/>
                    </prefix>
                </textField>
            </propertyFilter>
            <hbox id="buttonsPanel" classNames="buttons-panel">
                <startSlot>
                    <button id="createButton" action="tasksDataGrid.createAction"/>
                    <button id="editButton" action="tasksDataGrid.editAction"/>
                    <button id="removeButton" action="tasksDataGrid.removeAction"/>
                </startSlot>
                <endSlot>
                    <simplePagination id="pagination" dataLoader="tasksDl"/>
                </endSlot>
            </hbox>
            <dataGrid id="tasksDataGrid"
                      width="100%"
                      minHeight="20em"
                      dataContainer="tasksDc"
                      columnReorderingAllowed="true"
                      selectionMode="MULTI">
                <actions>
                    <action id="createAction" type="list_create"/>
                    <action id="editAction" type="list_edit"/>
                    <action id="removeAction" type="list_remove"/>
                </actions>
                <columns resizable="true">
                    <column property="name"/>
                    <column property="description"/>
                    <column property="project"/>
                    <column property="type"/>
                    <column property="status"/>
                </columns>
            </dataGrid>
        </vbox>
        <hbox id="lookupActions" visible="false"
              classNames="px-m py-s bg-contrast-5">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
